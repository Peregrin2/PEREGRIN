#include <iostream>

using namespace std;

int main()
{
    double num1, num2, ans;
    int choice;
    string con;

    do {
    string text = "|  ===== LET THE MATH BEGIN =====  |";

    string colors[] = {
        "\x1b[31m",
        "\x1b[33m",
        "\x1b[32m",
        "\x1b[36m",
        "\x1b[34m",
        "\x1b[35m"
    };

    for (size_t i = 0; i < text.size(); i++) {
        cout << colors[i % 6] << text[i];
    }

    cout << "\x1b[0m" << endl; // Reset color

    cout<<"|----------Enter Operator----------|"<<endl;
    cout<<"|          [1.] Addition           |"<<endl;
    cout<<"|          [2.] Subtraction        |"<<endl;
    cout<<"|          [3.] Multiplication     |"<<endl;
    cout<<"|          [4.] Division           |"<<endl;
    cout<<"|----------------------------------|"<<endl;
    cout<<"Choice: ";
    cin>>choice;

    if (choice < 1 || choice > 4) {
    cout << "Invalid input Please try again";

    }else{
    cout<<"Enter First Number: ";
    cin>>num1;
    cout<<"Enter Second Number: ";
    cin>>num2;



    switch(choice){
    case 1:
        ans = num1 + num2;
        cout<<"The Answer is: "<<ans;
        break;
    case 2:
        ans = num1 - num2;
        cout<<"The Answer is: "<<ans;
        break;
    case 3:
        ans = num1 * num2;
        cout<<"The Answer is: "<<ans;
        break;
    case 4:
        if (num2 != 0){
            ans = num1 / num2;
            cout<<"The Answer is: "<<ans;
        }else{
            cout<<"ERROR PLEASE TRY AGAIN.";
        }
        break;

    default:
        cout<<"Invalid Input TvT";

    }
    }
    cout<<""<<endl;

    cout<<"Do you want to Continue? [Y/N]: ";
    cin>>con;
    system("cls");

    }while (con == "Y" || con== "y");

    cout<<"Thanks For Using my Basic Calculator:)";



    return 0;
}

