#include <iostream>
using namespace std;

int main() {
    string menu[5] = {"Burger Steak Meal", "Chickenjoy Meal", "Jolly Spaghetti Meal", "Burger + Fries + Drink", "Halo-Halo"};
    int price[5] = {99, 99, 99, 78, 75};
    int order[5][5][3] = {0};
    int numOrdersArr[5] = {0};
    int customer = 5, numOrders = 5;
    int totalPrice = 0, paid = 0, payment;





    for (int i = 0; i < customer; i++) {
        cout << "\n=== Customer " << i + 1 << " ===" << endl;
        totalPrice = 0;
        paid = 0;

        numOrdersArr[i] = numOrders;


        for (int j = 0; j < numOrders; j++) {
            while (true) {
                cout << "\n=== MENU ===" << endl;
                cout << "[1]. Burger Steak Meal - 99" << endl;
                cout << "[2]. Chickenjoy Meal - 99" << endl;
                cout << "[3]. Jolly Spaghetti Meal - 99" << endl;
                cout << "[4]. Burger + Fries + Drink - 78" << endl;
                cout << "[5]. Halo-Halo - 75" << endl;
                cout << "What is your Order?: ";
                cin >> order[i][j][0];

                if (order[i][j][0] >= 1 && order[i][j][0] <= 5) {
                    cout << "Quantity: ";
                    cin >> order[i][j][1];

                    int itemIndex = order[i][j][0] - 1;
                    order[i][j][2] = price[itemIndex] * order[i][j][1];
                    totalPrice += order[i][j][2];

                    cout << "Your Order is: " << menu[itemIndex] << endl;
                    cout << "Price: " << order[i][j][2] << endl;
                    break;
                } else {
                    cout << "Invalid Input, Please Try again.\n";
                }
            }
        }


        cout << "\nTotal Price for Customer " << i + 1 << ": " << totalPrice << endl;
        while (paid < totalPrice) {
            cout << "Amount Paid: ";
            cin >> payment;
            paid += payment;

            if (paid < totalPrice) {
                cout << "Insufficient payment! You still owe " << totalPrice - paid << endl;
            }
        }
        cout << "Change: " << paid - totalPrice << endl;
        cout << "Thank you, Customer " << i + 1 << "!\n";
    }


    cout << "\n\n===== FINAL RECEIPT =====" << endl;

    for (int i = 0; i < customer; i++) {
        int customerTotal = 0;
        cout<<"============================================"<<endl;
        cout << "\nCustomer " << i + 1 << " Orders:"<<endl;

        for (int j = 0; j < numOrdersArr[i]; j++) {
            int itemIndex = order[i][j][0] - 1;
            cout << "- " << menu[itemIndex]<<endl;
            cout << " x" << order[i][j][1]<<endl;
            cout << " = " << order[i][j][2] << endl;
            customerTotal += order[i][j][2];
        }
        cout << "Total: " << customerTotal << endl;
    }

    return 0;
}
