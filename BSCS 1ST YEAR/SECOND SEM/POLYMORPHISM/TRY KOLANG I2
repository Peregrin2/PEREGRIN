#include <iostream>
using namespace std;

class Father{
protected:
int age;
float balance;
string Fullname;

public:


    Father(int age, float balance, string Fullname){
        this->age = age;
        this->balance = balance;
        this->Fullname = Fullname;
    }

   virtual void display(){
    cout<<"===========================================\n";
        cout<<"Father's Fullname: "<<Fullname<<endl;
        cout<<"Age: "<<age<<endl;
        cout<<"Father's Balance: "<<balance<<endl;
    cout<<"===========================================\n";
    }
};



class Son: public Father{
protected:
int sonAge;
string sonFullname;
float sonBalance;

public:

    Son(int sonAge,string sonFullname,float sonBalance, int age,float balance,string Fullname)
    :Father(age,balance,Fullname){
        this->sonAge = sonAge;
        this->sonFullname = sonFullname;
        this->sonBalance = sonBalance;
    }

    void display() override{
        Father::display();

        cout<<"Son's Fullname: "<<sonFullname<<endl;
        cout<<"Age: "<<sonAge<<endl;
        cout<<"Son's Balance: "<<sonBalance<<endl;
        cout<<"===========================================\n";
    }
};


int main() {
    /*


