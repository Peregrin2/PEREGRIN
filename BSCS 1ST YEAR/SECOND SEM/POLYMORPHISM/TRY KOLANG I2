    cout << "Enter Father's Age: ";
    cin >> fAge;

    cout << "Enter Father's Balance: ";
    cin >> fBalance;

    cin.ignore(); 

    cout << "\nEnter Son's Fullname: ";
    getline(cin, sName);

    cout << "Enter Son's Age: ";
    cin >> sAge;

    cout << "Enter Son's Balance: ";
    cin >> sBalance;

    // POLYMORPHISM
    Father* Family = new Son(sAge,sName,sBalance,fAge,fBalance,fName);
    Family->display();

    delete Family;



    */

    Father* Family = new Son(

        19,"jAYPEEEEEEE",20000, // Son info: age, name, balance
        18,10000,"jAYPEE" // Father info: age, balance, name

    );

    Family->display();

    delete Family;

    return 0;
}
