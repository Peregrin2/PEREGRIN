}student1, student2;


string getmaskpassword() {
    string password = "";
    char ch;

    while (true) {
        ch = _getch();

        // ENTER key â†’ finish input
        if (ch == 13) {
            cout << endl;
            break;
        }

        // BACKSPACE key
        if (ch == 8 && password.length() > 0) {
            cout << "\b \b"; // erase * from screen
            password.pop_back(); // remove last character from password
            continue;
        }

        // normal character
        if (ch != 8) {
            password.push_back(ch);
            cout << '*';
        }
    }

    return password;
}



